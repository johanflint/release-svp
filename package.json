{
  "name": "release-svp",
  "version": "0.1.0",
  "description": "Create pull requests based on Github labels",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/src/index.js",
    "test": "vitest run",
    "copy-graphql": "cp -R src/graphql dist",
    "build": "tsc -p . && npm run copy-graphql",
    "watch": "npm-run-all -p watch:tsc watch:graphql",
    "watch:graphql": "chokidar 'src/graphql/*.graphql' -c 'npm run copy-graphql'",
    "watch:tsc": "tsc --watch"
  },
  "dependencies": {
    "@google-automations/git-file-utils": "^3.0.0",
    "chalk": "^5.6.2",
    "code-suggester": "^5.0.0",
    "figures": "^6.1.0",
    "octokit": "^5.0.5",
    "yargs": "^17.0.0"
  },
  "devDependencies": {
    "@types/node": "^24.10.0",
    "@types/yargs": "^17.0.34",
    "@vitest/coverage-v8": "^4.0.9",
    "chokidar-cli": "^3.0.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.5.3",
    "vitest": "^4.0.9"
  },
  "private": true
}
